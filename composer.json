{
    "name": "fernandocalmet/slim4-api-crud-sql",
    "description": "Slim4 Restful CRUD Application",   
    "authors": [
        {
            "name": "Fernando Calmet",
            "email": "fercalmet@gmail.com",
            "homepage": "https://github.com/fernandocalmet"
        }
    ],
    "require": {
        "firebase/php-jwt": "^5.0",
        "palanik/corsslim": "dev-slim3",
        "predis/predis": "^1.1",
        "respect/validation": "^1.1",
        "slim/slim": "^3.12.2",
        "vlucas/phpdotenv": "^2.4",
        "pimple/pimple": "^3.2",
        "slim/psr7": "^0.5.0"
    },
    "require-dev": {
        "maurobonfietti/skel-api-slim-php-crud-generator": "dev-master",
        "nunomaduro/phpinsights": "^1.14",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.0",
        "symfony/console": "^3.3"
    },
    "config": {
        "sort-packages": true,
        "process-timeout" : 0
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",    
    "scripts": {
        "post-create-project-cmd": [
            "# Copy default environment variables:",
            "php -r \"copy('.env.example', '.env');\""
        ],
        "phpstan": "./vendor/bin/phpstan analyse src tests --level=6",
        "coverage": "phpunit --coverage-html=coverage --coverage-text",
        "test": "phpunit",
        "database": "extras/bin/restart-api.sh",
        "restart": "php extras/bin/restart-api.sh",
        "restart-db": "php extras/bin/restart-db.php",
        "migration": "php extras/bin/migration.php", 
        "crud": "php console api:generate:endpoints",
        "up": "docker-compose up -d --build",
        "down": "docker-compose down",
        "start": "php -S 127.0.0.1:8080 -t public public/index.php"
    }
}
